<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lengkai.dao.IUserDao">
    
    <resultMap id="userMap" type="com.lengkai.domain.User">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
       <result column="sex" property="sex"/>
        <result column="address" property="address"/>
        <result column="birthday" property="birthday"/>
        <collection property="accounts" ofType="com.lengkai.domain.Account">
        <id column="id" property="id"/>
        <result column="uid" property="uid"/>
        <result column="money" property="money"/>
        </collection>
    </resultMap>
    
    <sql id="defsql">
        select * from user
    </sql>
    
    
    
    <select id="findAll" resultMap="userMap">
        select u.*,a.id as aid ,a.uid,a.money from user u left outer join account a on u.id=a.uid;
    </select>

    <select id="findById" resultType="com.lengkai.domain.User" parameterType="int">
        select * from user where id=#{id};
    </select>

    <insert id="saveUser" parameterType="com.lengkai.domain.User">
        insert into user(username,birthday,sex,address) values (#{username},#{birthday},#{sex},#{address});
    </insert>

    <update id="update" parameterType="com.lengkai.domain.User">
        update user set username=#{username},birthday=#{birthday},sex=#{sex}, address=#{address} where id=#{id};
    </update>
    
    <delete id="delete" parameterType="java.lang.Integer">
        delete from user where id=#{id};
    </delete>

    <select id="findByName" resultType="com.lengkai.domain.User" parameterType="String">
            select * from user where username like #{username} ;
     </select>

    <select id="findtol" resultType="int">
        select count(*) from user;
    </select>


<!--    <select id="findByUser" parameterType="com.lengkai.domain.User" resultMap="userMap">
        select * from user where 1=1
            <if test="username!=null ">
                and username like #{username}
            </if>
            <if test="sex!=null">
                and sex like #{sex};
            </if>
    </select>-->
    <select id="findByUser" parameterType="com.lengkai.domain.User" resultMap="userMap">
        <include refid="defsql"></include>

        <where>
            <if test="username!=null ">
                and username like #{username}
            </if>
            <if test="sex!=null">
                and sex like #{sex};
            </if>
        </where>
    </select>
    
    
    
    <select id="findByIds" resultType="com.lengkai.domain.User" parameterType="com.lengkai.domain.Queryvo">
        <include refid="defsql"></include>
        <where>
            <if test="ids != null and ids.size()>0">
                <foreach collection="ids" open="id in (" close=")" item="uid" separator="," >
                    #{uid}
                </foreach>
            </if>
        </where>
    </select>
</mapper>